##PART ONE
#variable age
my.age <- 24
#variable name
my.name <- "therese"
#function introduction
makeIntroduction <- c(my.name, my.age)
#function sentence
makeIntroduction <- paste("hello my name is", my.name, "and I am", my.age, "years old")
#Intro
my.intro <- c(my.name, my.age)
my.intro
my.intro <- makeIntroduction
#function casual intro
casual.intro <- sub("hello my name is", "hey I'm", my.intro)
casual.intro
#capital intro
capital.intro <- str_to_title(my.intro)
capital.intro
#lowercase e
intro.e.count <-str_count(my.intro, pattern = "e")
intro.e.count

##PART TWO
#six books
book <- c("Extremely Loud and Incredibly Close", "The Road", "The Martian Chronicles", "The Handmaid's Tale", "Brave New World", "The Hours")
#top three
top.three.books <- book [c (1,2,3)]
top.three.books
#reviews
book.reviews <- paste(book,"is a great read!")
book.reviews
#missing four
books.without.four <- book [c(1,2,3,5,6)]
books.without.four
#long titles
long.titles <- book [length(15)]
long.titles

##PART THREE
#variable
my.numbers <- 1:201
my.numbers
#squared
squared.numbers <- my.numbers^2
squared.numbers
#squared mean
squared.mean <- mean(squared.numbers)
squared.mean
#perfect squares
square <- sqrt(my.numbers)
square
